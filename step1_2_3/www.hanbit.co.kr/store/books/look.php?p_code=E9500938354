<script type="text/javascript">
  function sch_smit(){
    if(!$.trim($("#keyword_str").val()).length) {
      alert("검색어를 입력해주세요");
      $("#keyword_str").focus();
      return false;
    }else{
      $("#gnbsearchfrm").attr("action","/search/search_list.html");
