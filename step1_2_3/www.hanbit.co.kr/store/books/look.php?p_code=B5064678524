  /*---------------------------------------------------------------
    오탈자 SCRIPT
  --------------------------------------------------------------- */  
  //오탈자 리스트     
  function misprint_get_list(str){    
    var p_code     = 'B5064678524';          
    var conf      = $("#confirm_type option:selected").val();        
    var p_sort_type  = $("#p_sort_type").val();  
    var r_sort_type    = $("#r_sort_type").val();  
    if(!str)str = "page";    
    
    //정렬
    if(str == "page"){    
      if( p_sort_type == "DE"){ p_sort_type = "A";
      }else if( p_sort_type == "" ||  p_sort_type == "A"){  p_sort_type = "DE";
      }      
      r_sort_type = "";
    }
    if(str == "regdt"){    
      if( r_sort_type == "DE"){ r_sort_type = "A";
      }else if(  r_sort_type == "" ||r_sort_type == "A"){  r_sort_type = "DE";
      }
      p_sort_type = "";    
    }                  
    $("#p_sort_type").val(p_sort_type);
    $("#r_sort_type").val(r_sort_type);
    //alert(p_sort_type+"=="+r_sort_type);
            
    $.ajax({
      type : "post",
      url : "/inc/inc_store_detail_misprint_ajaxList.php",
      data:{  fk_p_code:p_code , conf :conf , p_sort_type : p_sort_type , r_sort_type:r_sort_type },          
      contentType: "application/x-www-form-urlencoded; charset=UTF-8",
      success : function(data){      
        $("#misprint_con_div").html("");
        //$("#misprint_con_div").html(data);            
        $(".misprint_list").eq(0).html(data);            
        $(".misprint_list").eq(1).html(data);            
      }
    });            
  }
  
  //오탈자 팝업요청 버튼 
  function misprint_start(){    
    var m_idx = '';  
    if(!m_idx) { 
      alert("로그인 후 오탈자 등록이 가능합니다.");
      document.location.href='/member/login.html';
      return;
    }    
    misprint_layer_open('layer_misprint');return;    
  }  
  
  //오탈자 등록 취소 버튼    
  function misprint_reset(){    
    $('.misprint_layer').fadeOut();    
  }  

  //오탈자등록  처리 버튼
  function misprint_proc(str,idx){  
    var fk_m_idx        = $("#fk_m_idx").val();       
    if(!fk_m_idx) { 
      alert("로그인 후 사용이 가능합니다.");
      document.location.href='/member/login.html';
      return;
    }
    
    $("#err_info").val( myeditor_err.outputBodyHTML());            
    
    var type_str        =  str;          
    var fk_m_idx        = $("#fk_m_idx").val();       
    var fk_p_code      = $("#fk_p_code").val();          
    var err_type        = $("#err_type option:selected").val();      
    var err_p_version    = "";  
    var err_p_page      = $("#err_p_page").val();       
    var err_location    = $("#err_location").val();   
    var err_info        = $("#err_info").val();   
    var err_file        = $("#err_file").val();                                                                  
                
                    
    if($("#err_type option:selected").val() =="") {
      alert("구분을선택해주세요");$("#err_type").focus();return;
    }
    
    if($(":checkbox[name='err_p_version[]']:checked").length < 1) {
      alert("상품버전을 선택해주세요");$("#err_p_version").focus();return;
    }
          
    if(!err_p_page) {
      alert("페이지를 입력해주세요");$("#err_p_page").focus();return;
    }      
    
    if(!err_location) {
      alert("위치정보를 입력해주세요");$("#err_location").focus();return;
    }  
        
    var err_info_len = $("#err_info").val().length;    
    if(err_info_len <20) {
      alert("내용을 입력해주세요");$("#err_info").focus();return;
    }                
  
    err_p_version = "";
    $('input:checkbox[name="err_p_version[]"]').each(function() {         
      if(this.checked){
        err_p_version+=','+$(this).val();      
      }                    
     });     
    err_p_version = err_p_version.substring(1,err_p_version.length);         
            
    var result_postdata= {  
         type_str        :  type_str,
         fk_m_idx        :  fk_m_idx,        
         fk_p_code      :   fk_p_code,      
         err_type        :  err_type,        
         err_p_version    :  err_p_version,  
         err_p_page      :   err_p_page,      
         err_location      :  err_location,          
         err_info        :  err_info,    
         err_file          :  err_file              
    }                                    
    $.ajax({
      type : "post",
      url : "/store/ajax.addMisprint.php",
      data:result_postdata,          
      contentType: "application/x-www-form-urlencoded; charset=UTF-8",
      success : function(data){  
        if(data  >0){    
          $('.misprint_layer').fadeOut();      
          var currentUrl = window.location.href.split('&');        
          
          //url "&" 있으면 삭제후 파라미터 추가
          location.href = currentUrl[0]+'&tid=misprint';
          //location.href='/store/books/look.php?p_code=B5064678524&tid=misprint';                  
          //location.reload(true);
        }            
      }
    });  
  }    
  
  //오탈자 인쇄하기
  function misprint_print(){      
    var p_code       = 'B5064678524';          
    var conf        = $("#confirm_type option:selected").val();        
    var p_sort_type  = $("#p_sort_type").val();  
    var r_sort_type    = $("#r_sort_type").val();      
    
    //var sort_type;    
    //if(p_sort_type)sort_type = p_sort_type ;
    //if(r_sort_type)sort_type = r_sort_type ;
        
    var url_full = "/store/books/misprint_view.html?fk_p_code="+p_code+"&conf="+conf+"&p_sort_type="+p_sort_type+"&r_sort_type="+r_sort_type;      
    
    var openNewWindow = window.open("about:blank");
        openNewWindow.location.href = url_full;                
  }
              
  /*---------------------------------------------------------------
    오탈자 SCRIPT 
  --------------------------------------------------------------- */

  /*---------------------------------------------------------------
    도서인증 SCRIPT
  --------------------------------------------------------------- */  
  function book_auth(){  
    var fk_m_idx        = $("#fk_m_idx").val();       
    if(!fk_m_idx) { 
      alert("로그인 후 사용이 가능합니다.");
      document.location.href='/member/login.html';
      return;
    }
          
    var fk_m_idx      = $("#fk_m_idx").val();       
    var fk_p_code      = $("#fk_p_code").val();          
    var buy_date      = $("#buy_date").val();      
    var buy_site        = $("#buy_site").val();      
    var add_code      = $("#add_code").val();                                                                                
          
    if(!buy_site) {
      alert("구입처를 선택해주세요");$("#buy_site").focus();return;
    }  

    if(!buy_date) {
      alert("구입일을 입력해주세요");$("#buy_date").focus();return;
    }          
    
    if(!add_code) {
      alert("부가기호를 입력해주세요");$("#add_code").focus();return;
    }  
    
    $("#cfrm").submit();
    
    /*    
    var result_postdata= {  
         fk_m_idx      :  fk_m_idx,        
         fk_p_code      :   fk_p_code,      
         buy_date      :  buy_date,        
         buy_site        :  buy_site,  
         add_code      :   add_code,          
    }                                    
    $.ajax({
      type : "post",
      url : "/store/ajax.addBookauth.php",
      data:result_postdata,          
      contentType: "application/x-www-form-urlencoded; charset=UTF-8",
      success : function(data){          
        if(data  >0){                        
          $('.certification_layer').fadeOut();      
          location.reload(true);
        }            
      }
    });  
    */
  }
  /*---------------------------------------------------------------
    도서인증 SCRIPT
  --------------------------------------------------------------- */  

</SCRIPT>

